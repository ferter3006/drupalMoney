<?php

/**
 * @file
 * Install, update and uninstall functions for the moneylink_navigation module.
 */

use Drupal\system\Entity\Menu;
use Drupal\menu_link_content\Entity\MenuLinkContent;

/**
 * Implements hook_install().
 */
function moneylink_navigation_install() {
  // Crear menú personalizado para MoneyLink
  $menu = Menu::create([
    'id' => 'moneylink-main-menu',
    'label' => 'MoneyLink Main Menu',
    'description' => 'Menú de navegación principal para MoneyLink',
  ]);
  $menu->save();

  // Crear enlaces del menú
  $menu_links = [
    [
      'title' => 'Inicio',
      'link' => ['uri' => 'internal:/ml/home'],
      'menu_name' => 'moneylink-main-menu',
      'weight' => 0,
    ],
    [
      'title' => 'Panel de Usuario',
      'link' => ['uri' => 'internal:/ml/userpanel'],
      'menu_name' => 'moneylink-main-menu',
      'weight' => 1,
    ],
    [
      'title' => 'Mis Salas',
      'link' => ['uri' => 'internal:/ml/salas'],
      'menu_name' => 'moneylink-main-menu',
      'weight' => 2,
    ],
    [
      'title' => 'Mi Perfil',
      'link' => ['uri' => 'internal:/ml/perfil'],
      'menu_name' => 'moneylink-main-menu',
      'weight' => 3,
    ],
    [
      'title' => 'Cerrar Sesión',
      'link' => ['uri' => 'internal:/ml/logout'],
      'menu_name' => 'moneylink-main-menu',
      'weight' => 4,
    ],
  ];

  foreach ($menu_links as $link_data) {
    $menu_link = MenuLinkContent::create($link_data);
    $menu_link->save();
  }
}

/**
 * Implements hook_uninstall().
 */
function moneylink_navigation_uninstall() {
  // Eliminar el menú personalizado
  $menu = Menu::load('moneylink-main-menu');
  if ($menu) {
    $menu->delete();
  }
}